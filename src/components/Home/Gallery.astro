---
import { Image } from 'astro:assets';
import image1 from '../../../assets/1.jpg'
import image2 from '../../../assets/2.jpg'
import image3 from '../../../assets/3.jpg'
import image4 from '../../../assets/4.jpg'
import image5 from '../../../assets/5.jpg'
import image6 from '../../../assets/6.jpg'
import image7 from '../../../assets/7.jpg'
import image8 from '../../../assets/8.jpg'

const images = [
  { src: image1, alt: 'Image 1' },
  { src: image2, alt: 'Image 2' },
  { src: image3, alt: 'Image 3' },
  { src: image4, alt: 'Image 4' },
  { src: image5, alt: 'Image 5' },
  { src: image6, alt: 'Image 6' },
  { src: image7, alt: 'Image 7' },
  { src: image8, alt: 'Image 8' }
];
---

<section class="flex flex-col items-center gap-10 lg:gap-20 outfit px-5 md:px-14">
	<div class="flex flex-col md:flex-row justify-between gap-10">
		<div class="flex flex-col gap-2">
			<p class="text-[40px] text-white">Our Gallery</p>
			<p class="text-neutral-500">A Glimpse into the Love We Capture</p>
		</div>
		<p class="outfit text-base md:text-[20px] text-white w-full md:w-1/2 lg:w-1/3 text-left md:text-right">Step into a world of unforgettable moments, where every glance, smile, and embrace is beautifully preserved.</p>
	</div>
	<div class="flex flex-wrap justify-start md:justify-center gap-5">
		{
			images.map((image, i) => (
				<Image id={i.toString()} src={image.src} alt={image.alt} class="w-full md:w-[300px] lg:w-[400px] h-[150px] md:h-full object-cover rounded-lg hover:scale-105 duration-200"/>
			))
		}
	</div>
	<p class="text-white border border-white px-10 py-3 rounded-full w-max">Explore the gallery</p>
</section>