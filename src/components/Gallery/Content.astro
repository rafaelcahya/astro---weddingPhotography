		images: [
			{ src: image1, alt: 'Image 1' },
			{ src: image2, alt: 'Image 2' },
			{ src: image3, alt: 'Image 3' },
			{ src: image4, alt: 'Image 4' },
			{ src: image5, alt: 'Image 5' }
		]
	},
	{
		locationName: "Meadowbrook Gardens, Vermont",
		coupleName: "Sarah & Tom's Vintage Elegance",
		date: "July 18, 2023",
		description: "A picturesque garden setting in Vermont, Meadowbrook Gardens is ideal for couples seeking timeless beauty, lush greenery, and elegant outdoor ceremonies.",
		images: [
			{ src: image1, alt: 'Image 1' },
			{ src: image2, alt: 'Image 2' },
